.content_cell {
  padding: 20px 20px;
  background: var(--background-color-1);
  border-radius: 9px;
}

.question_content {
  font-weight: bold;
  line-height: 1.4;
  position: relative;
}

.recording_cell {
  padding: 15px 20px;
  border: 1px solid var(--solid-border-color);
  margin-top: 15px;
  border-radius: 9px;
}

.audio_duration {
  color: rgba(0, 0, 0, 0.6);
}